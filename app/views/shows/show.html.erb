<h1>Your show: <%= @show.title %></h1>

<h4>Tropes:</h4>
<ul>
  <% @show.tropes.each do |trope|%>
    <li>
      <%= trope.name %>: <%= trope.description %><br>
    </li>
  <% end  %>
</ul>

<h4>Actors:</h4>
<ul>
  <% @show.actors.each do |actor| %>
    <li>
      <%= actor.name %>
    </li>
  <% end  %>
</ul>
